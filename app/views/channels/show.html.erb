<div class="row channelview">
  <div class="col-md-10">

    <% if @stream.source == 'embed' %>
        <%= render 'embed' %>
    <% else %>
        <%= render 'm3u8' %>
    <% end %>

  </div>

  <div class="col-md-2">
    <p id="current_channel">Showing <%= @channel.name %></p>
    <p><%= link_to "Next channel", {:action => 'show', :id => @channel.next.id }, html_options = {:onclick => 'return cleanUp();' } %></p>
  </div>

</div>

<script>
  function cleanUp() {
    var m3u8Player = $('#player').length;
    if (m3u8Player > 0) {
      var player = videojs('player');
      player.dispose();
    }
  }

</script>

